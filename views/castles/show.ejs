<% layout('layouts/base') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= castle.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= castle.title %></h5>
              <p class="card-text"><%= castle.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= castle.location %></li>
            </ul>
            <div class="card-body">
                <a class="btn btn-primary" href="/castles" class="card-link">All Castles</a>
                <a class="btn btn-warning" href="/castles/<%=castle._id%>/edit" class="card-link">Edit</a>
                <form class="d-inline" action="/castles/<%=castle._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>                  
            </div>
          </div>
    </div>
</div>
