<% layout('layouts/base') %>
    <div class="mb-3">
        <h1 class="d-inline me-2">All Castles in the World</h1>
        <a class="btn btn-sm btn-primary" href="/castles/new">Add Castle</a>
    </div>
    <% for (let castle of castles) {%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <% if(castle.images.length) {%>
                    <img src="<%= castle.images[0].url %>" alt="" class="img-fluid">
                    <% } else { %>
                        <img src="" alt="">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= castle.title %>
                        </h5>
                        <p class="card-text">
                            <%= castle.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= castle.location %>
                            </small>
                        </p>
                        <a href="castles/<%= castle._id %>" class="btn btn-primary">View <%= castle.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>